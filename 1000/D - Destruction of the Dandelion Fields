
#include <bits/stdc++.h>
using namespace std;
 
 
int main(){
 
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	int t;
	cin>>t;
 
	while(t--){
		int n;
		cin>>n;
 
		vector<int>arr;
		vector<int>arr2;
 
		long long int sum=0;
 
		for (int i = 0; i < n; i++)
		{
			long int x;
			cin>>x;
			if(x%2==0){
				arr.push_back(x);
				sum+=x;
			}else{
				arr2.push_back(x);
			}
		}
		sort(arr2.begin(), arr2.end(), greater<int>());
 
		if(arr2.size()==0){
			cout<<0<<"\n";
		}else{
			int i=0;
			int j=arr2.size();
			int step=0;
 
			while(i<j){
				if(step%2==0){
					sum+=arr2[i];
					i++;
				}else{
					j--;
				}
				step++;
			}
			cout<<sum<<"\n";
		}
	}
}

