import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

            int n=sc.nextInt();
            int[]arr=new int[n];

            int Min=2147483647;

            for(int i=0;i<arr.length;i++){
                arr[i]=sc.nextInt();
                Min=Math.min(Math.abs(arr[i]),Min);
            }
            System.out.println(Min);
    }
}
