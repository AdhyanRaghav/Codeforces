 
#include <bits/stdc++.h>
using namespace std;
 
int main(){
 
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	int t;
	cin>>t;
 
	while(t--){
		int n;
		cin>>n;
 
		vector<int>arr(n);
 
		int zero=0;
		int mone=0;
 
		for (int i = 0; i <n; i++)
		{
			cin>>arr[i];
			if(arr[i]==0){
				zero++;
			}if(arr[i]==-1){
				mone++;
			}
		}
 
		int count=0;
 
		if(mone%2!=0){
			count++;
			count++;
			cout<<count+zero<<"\n";
		}else{
			cout<<zero<<"\n";
		}
 
 
	}
}

