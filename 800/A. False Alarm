import java.util.*;
 
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
 
        while (t-- > 0) {
            int n = sc.nextInt();
            int x = sc.nextInt();
            int[] doors = new int[n];
 
            for (int i = 0; i < n; i++) {
                doors[i] = sc.nextInt();
            }
 
            int i = 0;
          
            while (i < n && doors[i] == 0) {
                i++;
            }
 
         
            int end = i + x;
 
   
            i = end;
 
            boolean canPass = true;
            while (i < n) {
                if (doors[i] == 1) {
                    canPass = false;
                    break;
                }
                i++;
            }
 
            System.out.println(canPass ? "YES" : "NO");
        }
    }
}
