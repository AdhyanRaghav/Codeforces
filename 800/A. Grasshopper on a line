#include <bits/stdc++.h>
using namespace std;
 
int main(){
 
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
 
	int t;
	cin>>t;
 
	while(t--){
		
		int x;
		int k;
 
		cin>>x>>k;
 
		if(x%k==0){
			cout<<2<<"\n";
			cout<<x-1<<" "<<1;
		}else{
			cout<<1<<"\n";
			cout<<x;
		}
 
		cout<<"\n";
 
	}
}
