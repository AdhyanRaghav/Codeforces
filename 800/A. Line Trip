import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
 
        while (t-- > 0) {
            int n = sc.nextInt();
            int x=sc.nextInt();
            int[] arr = new int[n];
 
            for (int i = 0; i < n; i++) {
                arr[i] = sc.nextInt();
            }
 
            int max=0;
            max=Math.max(max,arr[0]-0);
            for(int i=1;i<arr.length;i++){
                max=Math.max(max,arr[i]-arr[i-1]);
            }
            if((x-arr[arr.length-1])*2>max){
                System.out.println((x-arr[arr.length-1])*2);
            }else{
                System.out.println(max);
            }
        }
    }
}
