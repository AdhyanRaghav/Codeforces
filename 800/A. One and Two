
#include <bits/stdc++.h>
using namespace std;


int main(){

	ios::sync_with_stdio(false);
	cin.tie(nullptr);

	int t;
	cin>>t;

	while(t--){
		int n;
		cin>>n;

		vector<int>arr(n);

		int two=0;

		for(int i=0;i<n;i++){
			cin>>arr[i];
			if(arr[i]==2){
				 two++;
			}
		}


		if(two==0){
			cout<<1<<"\n";
		} 
		else if(two%2!=0) {
			cout<<-1<<"\n";
		}else{
			int oc=0;
			for(int i=0;i<n;i++){
				if(arr[i]==2){
					oc++;

					if(oc==two/2) {
						cout<<i+1<<"\n";
						break;
					}
				}

			}
		}
	}
}
