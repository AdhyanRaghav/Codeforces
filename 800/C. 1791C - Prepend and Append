
#include <bits/stdc++.h>
using namespace std;


int main(){

	ios::sync_with_stdio(false);
	cin.tie(nullptr);

	int t;
	cin>>t;

	while(t--){
		int n;
		string s;
		cin>>n>>s;

		int i=0;
		int j=s.size()-1;

		while(i<j){
			if((s[i]=='0' && s[j]=='1') || (s[i]=='1' && s[j]=='0')){
				i++;
				j--;
			}else{
				break;
			}
		}

		cout<<j-i+1<<"\n";
	}
}
