#include <bits/stdc++.h>
using namespace std;
 
 
int main(){
 
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	
	int t;
	cin>>t;
	
	while(t--){
		int n;
		cin>>n;

		vector<int>arr(n);

		for (int i = 0; i < arr.size(); ++i)
		{
			cin>>arr[i];
		}

		int Max=0;
		int count=0;

		int i=0;
		while(i<arr.size()){
			if(i%2==0){
				if(i==0){
					if(arr[i]==arr[i+1]){
						Max=max(arr[i],Max);
						int temp=arr[i];
						arr[i]-=(arr[i]-arr[i+1])+1;
						count+=temp-arr[i];

					}else if(arr[i]>arr[i+1]){
						Max=max(arr[i],Max);
						count+=1;
						arr[i]-=1;

					}
				}
				else {
					if((arr[i]<arr[i-1])){
						
					}else{
						Max=max(arr[i],Max);
						int temp=arr[i];
						arr[i]-=(arr[i]-arr[i-1])+1;
						count+=temp-arr[i];
						
					}
				}
			}else{
				Max=max(arr[i],Max);
				arr[i]=Max;
			}	
			i++;
		}

		cout<<count<<"\n";

		// for(int j=0;j<arr.size();j++){
		// 	cout<<arr[j]<<" ";
		// }
		// cout<<"\n";

		
	}
}

