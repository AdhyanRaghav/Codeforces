import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();

        while (t-- > 0) {
            int n = sc.nextInt();

            int[]arr=new int[n];

            for(int i=0;i<arr.length;i++){
                arr[i]= sc.nextInt();
            }
            int count=0;
            int oddP=0;
            int eveP=0;

            for(int i=0;i<arr.length;i++){
                if(i%2!=arr[i]%2){
                    count++;
                    if(arr[i]%2==0){
                        eveP++;
                    }else{
                        oddP++;
                    }
                }
            }
            if(count%2!=0) {
                System.out.println(-1);
            }else if(count==0){
                System.out.println(0);
            }else{
                if(oddP==eveP){
                    System.out.println(count/2);
                }else{
                    System.out.println(-1);
                }
            }

        }
    }
}

