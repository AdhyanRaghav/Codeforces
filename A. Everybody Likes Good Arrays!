import java.util.*;
 
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
 
        int t = sc.nextInt();
 
        while (t-- > 0) {
 
            int n = sc.nextInt();
            int[] arr = new int[n];
            int count=0;
 
            for(int i=0;i<arr.length;i++){
                arr[i]=sc.nextInt();
            }
 
            for(int i=0;i<arr.length-1;i++){
                if((arr[i]%2!=0 && arr[i+1]%2!=0) || (arr[i]%2==0 &&arr[i+1]%2==0)){
                    count++;
                }
            }
            System.out.println(count);
 
        }
    }
}
