import java.util.Arrays;
import java.util.Scanner;
public class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
 
        while (t-- > 0) {
            int n = sc.nextInt();
            int[] arr = new int[n];
 
            for (int i = 0; i < arr.length; i++) {
                arr[i] = sc.nextInt();
            }
//            int[] arr = {2, 7, 4, 6, 9, 11, 5};
            int[] arr2 = Arrays.copyOf(arr,arr.length);
            int count = 0;
            int steps=0;
            Arrays.sort(arr);
 
            for (int i = arr.length - 1; i >= 0; i--) {
                if ((arr[0] + arr[i]) % 2 == 0) {
                    break;
                } else {
                    arr[i] = 0;
                    count++;
                }
            }
            Arrays.sort(arr2);
            for (int j =0; j<arr2.length; j++) {
                if ((arr2[j] + arr2[arr.length-1]) % 2 == 0) {
                    break;
                } else {
                    arr2[j] = 0;
                    steps++;
                }
            }
            System.out.println(Math.min(count,steps));
        }
 
    }
}



