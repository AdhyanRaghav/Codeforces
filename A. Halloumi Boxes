import java.util.*;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
 
        while (t-- > 0) {
            int n = sc.nextInt();
            int k=sc.nextInt();
            int[]arr=new int[n];
 
            for(int i=0;i<arr.length;i++){
                arr[i]= sc.nextInt();
            }
            int[]arr2=arr.clone();
            Arrays.sort(arr2);
 
            if(k==1){
                if(Arrays.equals(arr,arr2)) {
                    System.out.println("YES");
                }else{
                    System.out.println("NO");
                }
            }else{
                System.out.println("YES");
            }
        }
    }
}
